<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OHO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.OHO.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@drawable/splash</item>
    </style>

    <style name="Theme.OHO.Reegistration">
        <item name="android:windowBackground">@drawable/login_background</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_10sdp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_10sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardViewStyle1" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners1</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/_10sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_10sdp</item>
    </style>

    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:font">@font/ptsans_regular</item>
    </style>
</resources>