<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/two_sided_rounded_vorner_left"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/ptsans_regular"
            android:text="in a partner, I'm looking for..."
            android:textColor="@color/textSubTitle"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/darkergrotesque_bold"
            android:text="Commitment &amp; honesty"
            android:textColor="@color/indicatioractive"
            android:textSize="@dimen/_18ssp" />
    </LinearLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_50sdp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/border_corner_left_drawable">


        <TextView
            android:id="@+id/text_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:fontFamily="@font/ptsans_regular"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="There's power in looking silly and not caring that you do."
            android:textColor="@color/textSubTitle"
            android:textSize="@dimen/_14ssp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/photo_placeholder_3" />
    </LinearLayout>

</LinearLayout>