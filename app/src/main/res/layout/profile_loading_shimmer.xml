<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_view"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@color/placeholder_background"
            app:civ_border_color="#E8E8E8"
            app:civ_border_overlay="true"
            app:civ_border_width="@dimen/_5sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/ptsans_bold"
            android:text=""
            android:background="@color/placeholder_background"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp" />
    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/darkergrotesque_regular"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:background="@color/placeholder_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/textview_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/darkergrotesque_regular"
                android:text=""
                android:background="@color/placeholder_background"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/darkergrotesque_regular"
                android:text=""
                android:background="@color/placeholder_background"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/darkergrotesque_regular"
                android:text=""
                android:background="@color/placeholder_background"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/darkergrotesque_regular"
                android:text=""
                android:background="@color/placeholder_background"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/darkergrotesque_regular"
            android:text=""
            android:background="@color/placeholder_background"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_16ssp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/text_title_about"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsans_bold"
            android:text=""
            android:background="@color/placeholder_background"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textview_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/ptsans_regular"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text=""
        android:lines="4"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/placeholder_background"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

</LinearLayout>