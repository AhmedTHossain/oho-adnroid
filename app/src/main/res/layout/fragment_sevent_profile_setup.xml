<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.registration.SeventProfileSetup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ptsans_bold"
        android:text="You are interested in.."
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
        android:id="@+id/button_group_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:toggle_selectAnimation="fade">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/button_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:toggle_backgroundColor="@color/white"
            app:toggle_borderColor="#E6E6E6"
            app:toggle_borderWidth="@dimen/_2sdp"
            app:toggle_paddingLeft="@dimen/_10sdp"
            app:toggle_paddingRight="@dimen/_10sdp"
            app:toggle_selectedBackgroundColor="@color/ted_image_picker_primary_pressed"
            app:toggle_selectedBorderColor="@color/ted_image_picker_primary_pressed"
            app:toggle_text="Male"
            app:toggle_textColor="@color/black"
            app:toggle_textPadding="@dimen/_10sdp"
            app:toggle_textSize="@dimen/_14ssp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/button_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:toggle_backgroundColor="@color/white"
            app:toggle_borderColor="#E6E6E6"
            app:toggle_borderWidth="@dimen/_2sdp"
            app:toggle_paddingLeft="@dimen/_10sdp"
            app:toggle_paddingRight="@dimen/_10sdp"
            app:toggle_selectedBackgroundColor="@color/ted_image_picker_primary_pressed"
            app:toggle_selectedBorderColor="@color/ted_image_picker_primary_pressed"
            app:toggle_text="Female"
            app:toggle_textColor="@color/black"
            app:toggle_textPadding="@dimen/_10sdp"
            app:toggle_textSize="@dimen/_14ssp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/button_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:toggle_backgroundColor="@color/white"
            app:toggle_borderColor="#E6E6E6"
            app:toggle_borderWidth="@dimen/_2sdp"
            app:toggle_paddingLeft="@dimen/_10sdp"
            app:toggle_paddingRight="@dimen/_10sdp"
            app:toggle_selectedBackgroundColor="@color/ted_image_picker_primary_pressed"
            app:toggle_selectedBorderColor="@color/ted_image_picker_primary_pressed"
            app:toggle_text="Both"
            app:toggle_textColor="@color/black"
            app:toggle_textPadding="@dimen/_10sdp"
            app:toggle_textSize="@dimen/_14ssp" />

    </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/ptsans_bold"
        android:text="Select a profile photo.."
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_16ssp" />

    <ImageView
        android:id="@+id/image_profile_photo"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/add_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/darkergrotesque_medium"
        android:text="Tap to select photo"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/upload_photo_progress"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:elevation="@dimen/_10sdp"
            android:visibility="gone"
            app:SpinKit_Color="@color/ted_image_picker_primary_pressed" />

        <TextView
            android:id="@+id/button_next_seventh"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_rounded_corner"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/darkergrotesque_bold"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:drawableTint="@color/white" />
    </RelativeLayout>

</LinearLayout>