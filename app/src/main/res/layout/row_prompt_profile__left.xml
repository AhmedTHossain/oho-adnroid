<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fab_edit_profile_photo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/rounded_button_solid"
        android:src="@drawable/ic_delete"
        android:tint="@color/white"
        android:layout_alignEnd="@id/layout_prompt_answer"
        android:elevation="1dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:id="@+id/layout_prompt_answer"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/two_side_rounded_corner_right"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/ptsans_regular"
            android:paddingEnd="@dimen/_20sdp"
            android:text="the most adventurous thing I did was..."
            android:textColor="@color/textSubTitle"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ptsans_bold"
            android:text="Sky Diving from 22,000 ft"
            android:textColor="@color/ted_image_picker_primary_pressed"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@id/layout_prompt_answer"
        android:layout_centerInParent="true"
        android:background="#F8F8F8" />

    <LinearLayout
        android:id="@id/layout_prompt_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/border_corner_drawable"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/text_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:fontFamily="@font/ptsans_regular"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Fools are those that believe smiles are a sign of happiness."
            android:textColor="@color/textSubTitle"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>
</RelativeLayout>