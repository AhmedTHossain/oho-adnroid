<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_faq"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10sdp">
    <TextView
        android:id="@+id/text_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:fontFamily="@font/ptsans_bold"
        android:text="@string/if_i_dont_show_up_ques"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:drawableEnd="@drawable/ic_arrow_right"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#1A000000"
        android:layout_marginTop="@dimen/_5sdp" />

    <TextView
        android:id="@+id/text_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_is_oho"
        android:fontFamily="@font/ptsans_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/border_corner_drawable"/>

</LinearLayout>