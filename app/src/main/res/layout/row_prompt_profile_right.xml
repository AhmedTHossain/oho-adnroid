<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_15sdp">

    <ImageView
        android:id="@+id/button_delete"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/rounded_button_solid"
        android:src="@drawable/ic_delete"
        android:tint="@color/white"
        android:layout_alignStart="@id/layout_prompt_answer"
        android:elevation="1dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:id="@+id/layout_prompt_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@drawable/two_sided_rounded_vorner_left"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/ptsans_regular"
            android:text="in a partner, I'm looking for..."
            android:textColor="@color/textSubTitle"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="viewEnd"/>

        <TextView
            android:id="@+id/text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ptsans_bold"
            android:text="Commitment &amp; honesty"
            android:textColor="@color/ted_image_picker_primary_pressed"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="viewEnd"/>
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@id/layout_prompt_answer"
        android:layout_centerInParent="true"
        android:background="#F8F8F8" />

    <LinearLayout
        android:id="@id/layout_prompt_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:background="@drawable/border_corner_left_drawable">

        <TextView
            android:id="@+id/text_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:fontFamily="@font/ptsans_regular"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="There's power in looking silly and not caring that you do."
            android:textColor="@color/textSubTitle"
            android:textSize="@dimen/_14ssp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/person" />
    </LinearLayout>

</RelativeLayout>