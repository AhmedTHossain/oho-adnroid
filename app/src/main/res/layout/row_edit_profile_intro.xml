<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Profile"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_rounded_medium"
            android:textStyle="bold"
            android:textSize="@dimen/_25ssp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_20sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:textSize="@dimen/_18ssp"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="@dimen/_20sdp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#1A000000"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_pick_profile_image"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        app:cardCornerRadius="@dimen/_500sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_add"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:fontFamily="@font/lovina_october_five_regular"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/_20ssp"/>
<!--            <ImageView-->
<!--                android:layout_width="@dimen/_25sdp"-->
<!--                android:layout_height="@dimen/_25sdp"-->
<!--                android:src="@drawable/ic_edit"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginStart="@dimen/_10sdp"/>-->
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:text="Sunnyvale, CA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/textTertiary"
            android:textStyle="italic"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:text="Product Owner"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Male"/>
                    <ImageView
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/ic_dot"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/text_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="178 cm"
                        android:layout_marginStart="@dimen/_5sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/ic_dot"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"/>
                    <TextView
                        android:id="@+id/text_religion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Agnostic"
                        android:layout_marginStart="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/ic_dot"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"/>
                    <TextView
                        android:id="@+id/text_vaccinated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Vaccinated"
                        android:layout_marginStart="@dimen/_5sdp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:text="South Asian" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_fill_in_about_yourself"
            android:textSize="@dimen/_14ssp"
            android:background="null"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="text"/>
    </LinearLayout>
</LinearLayout>