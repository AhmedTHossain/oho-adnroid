<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/_30sdp"
    tools:context=".views.settings.PreferenceSettingsFragment">

    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/ptsans_bold"
            android:text="@string/preference_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#1A000000" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/update_profile"
        android:layout_below="@id/title_view"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gender button group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/darkergrotesque_regular"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Interested In"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:id="@+id/button_group_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_male"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_borderColor="#E0E0E0"
                    app:toggle_text="Male" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_female"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Female" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_both"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Both" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Distance selector button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <TextView
                    android:id="@+id/text_distance_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/darkergrotesque_regular"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Distance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="20 miles"
                    android:textColor="@color/indicatioractive"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Location picker button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/darkergrotesque_regular"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/text_location_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="Fairfax, VA"
                    android:textColor="@color/indicatioractive"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Education button group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/darkergrotesque_regular"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Education"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:id="@+id/button_group_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_no_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_borderColor="#E0E0E0"
                    app:toggle_text="No Degree" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_highschool"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="High School" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_undergrad"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Undergrad" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_masters"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Masters" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_phd"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="PHD" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Race button group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/darkergrotesque_regular"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Race"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:id="@+id/button_group_race"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_white"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_borderColor="#E0E0E0"
                    app:toggle_text="White" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_asian"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Asian" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_black"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Black" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_africanamerican"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="African American" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_hispanic"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Hispanic" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_latinx"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Latinx" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_pacificislander"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Pacific Islander" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_americanindian"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="American Indian" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_others"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Others" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Religion button group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/darkergrotesque_regular"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Religion"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:id="@+id/button_group_religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_christian"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_borderColor="#E0E0E0"
                    app:toggle_text="Christian" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_catholic"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Catholic" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_jewish"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Jewish" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_muslim"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Muslim" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_hindu"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Hindu" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_sikh"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Sikh" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_agnostic"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Agnostic" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_buddhist"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Buddhist" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_spiritualnotreligious"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Spiritual / Not Religious" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_atheist"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Atheist" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_other"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Other" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Cuisine button group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/darkergrotesque_regular"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Cuisine"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:id="@+id/button_group_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_italian"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_borderColor="#E0E0E0"
                    app:toggle_text="Italian" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_japaneese"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Japaneese" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_indian"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Indian" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_mediterranean"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Mediterranean" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_korean"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Korean" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_american"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="American" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_vegetarian"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Vegetarian" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_vietnamese"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Vietnamese" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_chinese"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Chinese" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_other_cuisine"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Others" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/button_opentoall"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/_5sdp"
                    app:toggle_text="Open to all" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <!-- Height range selector -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:fontFamily="@font/darkergrotesque_regular"
                    android:text="Height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/height_spinner_min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/darkergrotesque_regular"
                    android:text="to"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/height_spinner_max"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

            </LinearLayout>

            <!-- Age range selector -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:fontFamily="@font/darkergrotesque_regular"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/age_spinner_min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/darkergrotesque_regular"
                    android:text="to"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/age_spinner_max"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/border_rounded_corner_disabled"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/darkergrotesque_regular"
        android:padding="@dimen/_10sdp"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:visibility="visible"
        app:drawableEndCompat="@drawable/ic_start"
        app:drawableTint="@color/white" />
</RelativeLayout>