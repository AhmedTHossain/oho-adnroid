                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/button_chinese"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/text_chinese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chinese"
                        android:background="@color/white"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textColor="@color/indicatioractive"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/button_open_to_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/text_open_to_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Open to all"
                        android:background="@color/white"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textColor="@color/indicatioractive"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/button_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/text_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:background="@color/white"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textColor="@color/indicatioractive"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/button_healthy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/text_healthy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:background="@color/white"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textColor="@color/indicatioractive"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
