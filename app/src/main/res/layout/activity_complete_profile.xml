<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/_30sdp"
    tools:context=".views.CompleteProfileActivity">


    <TextView
        android:id="@+id/screentitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/ptsans_bold"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="Complete Your Profile"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/screentitle"
        android:background="#1A000000" />

    <LinearLayout
        android:id="@+id/profile_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/darkergrotesque_regular"
            android:text="Select your profile photo"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image_view_landscape"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_person"
            android:background="#0D000000"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            android:visibility="visible"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image_view_portrait"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_person"
            android:background="#0D000000"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/select_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/border_rounded_corner"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/darkergrotesque_bold"
            android:padding="@dimen/_10sdp"
            android:text="Select"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:drawableTint="@color/white"
            app:drawableEndCompat="@drawable/ic_arrow_forward" />
        <TextView
            android:id="@+id/upload_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/border_rounded_corner"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/darkergrotesque_bold"
            android:padding="@dimen/_10sdp"
            android:text="Upload"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:drawableTint="@color/white"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_upload" />
    </LinearLayout>

</RelativeLayout>
