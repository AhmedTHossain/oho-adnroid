<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CompleteProfileActivity"
    android:background="@color/indicatoractive3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Your Profile"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:textStyle="bold"
                        android:textSize="@dimen/_25ssp"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/button_text_save_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Save"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textSize="@dimen/_18ssp"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#1A000000"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/button_pick_profile_image"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_250sdp"
                    app:cardCornerRadius="@dimen/_500sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:fontFamily="@font/lovina_october_five_regular"
                            android:textColor="@color/textTitle"
                            android:textSize="@dimen/_20ssp"/>
                        <!--            <ImageView-->
                        <!--                android:layout_width="@dimen/_25sdp"-->
                        <!--                android:layout_height="@dimen/_25sdp"-->
                        <!--                android:src="@drawable/ic_edit"-->
                        <!--                android:layout_gravity="center"-->
                        <!--                android:layout_marginStart="@dimen/_10sdp"/>-->
                    </LinearLayout>
                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Sunnyvale, CA"/>
                    <TextView
                        android:id="@+id/text_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/textTertiary"
                        android:textStyle="italic"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Product Owner"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/text_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/sf_pro_rounded_regular"
                                    android:text="Male"/>
                                <ImageView
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="@dimen/_5sdp"
                                    android:src="@drawable/ic_dot"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"/>
                                <TextView
                                    android:id="@+id/text_height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/sf_pro_rounded_regular"
                                    android:text="178 cm"
                                    android:layout_marginStart="@dimen/_5sdp"/>
                                <ImageView
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="@dimen/_5sdp"
                                    android:src="@drawable/ic_dot"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"/>
                                <TextView
                                    android:id="@+id/text_religion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/sf_pro_rounded_regular"
                                    android:text="Agnostic"
                                    android:layout_marginStart="@dimen/_10sdp"/>
                                <ImageView
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="@dimen/_5sdp"
                                    android:src="@drawable/ic_dot"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"/>
                                <TextView
                                    android:id="@+id/text_vaccinated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/sf_pro_rounded_regular"
                                    android:text="Vaccinated"
                                    android:layout_marginStart="@dimen/_5sdp"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/text_race"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="South Asian" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <EditText
                        android:id="@+id/edit_text_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/please_fill_in_about_yourself"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:inputType="text"
                        android:background="@null"
                        android:layout_marginEnd="@dimen/_20sdp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignEnd="@id/card_prompt_question_1">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_delete"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_prompt_question_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomCardViewStyle"
                    android:layout_alignEnd="@id/card_image_caption_1"
                    android:layout_marginTop="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_add"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_your_prompt_question"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <View
                    android:id="@+id/view_vertical_line_1"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/card_prompt_question_1"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_image_caption_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_below="@id/view_vertical_line_1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_25sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/_500sdp"
                            android:layout_marginEnd="@dimen/_10sdp">
                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/ic_add"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16ssp"
                            android:text="@string/caption_for_the_photo"
                            android:layout_gravity="center"
                            android:textColor="#B0ADAD"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignStart="@id/card_prompt_question"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_100sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_prompt_question_2"
                    style="@style/CustomCardViewStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/card_image_caption_2"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_20sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sf_pro_rounded_regular"
                            android:text="@string/select_your_prompt_question"
                            android:textColor="#373737"
                            android:textSize="@dimen/_16ssp" />

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/ic_add" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <View
                    android:id="@+id/view_vertical_line_2"
                    android:layout_below="@id/card_prompt_question_2"
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:background="#F2D9D9" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_image_caption_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_vertical_line_2"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_25sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardCornerRadius="@dimen/_500sdp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp">
                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/ic_add"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16ssp"
                            android:text="@string/caption_for_the_photo"
                            android:layout_gravity="center"
                            android:textColor="#B0ADAD"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignEnd="@id/card_prompt_question_3">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_delete"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_prompt_question_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomCardViewStyle"
                    android:layout_alignEnd="@id/card_image_caption_3"
                    android:layout_marginTop="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_add"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_your_prompt_question"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/view_vertical_line_3"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/card_prompt_question_3"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_image_caption_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_below="@id/view_vertical_line_3"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_25sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/_500sdp"
                            android:layout_marginEnd="@dimen/_10sdp">
                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/ic_add"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16ssp"
                            android:text="@string/caption_for_the_photo"
                            android:layout_gravity="center"
                            android:textColor="#B0ADAD"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>