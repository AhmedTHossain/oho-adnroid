<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.home.HomeFragment">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progress_loading_recommendations"
        style="@style/SpinKitView.Large.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_10sdp"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/ted_image_picker_primary_pressed" />

    <RelativeLayout
        android:id="@+id/recommendations_available_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/screentitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/ptsans_bold"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="Find Your Match"
            android:textColor="@color/black"
            android:textSize="@dimen/_25ssp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/screentitle"
            android:background="#1A000000" />

        <!-- Profile Layout -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_prompt_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_recommendations_available_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_screen"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">

            <TextView
                android:id="@+id/text_title_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/ptsans_bold"
                android:text="@string/no_recommendations"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/text_body_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/border_corner_drawable"
                android:fontFamily="@font/ptsans_regular"
                android:padding="@dimen/_20sdp"
                android:text="@string/no_recommendations_disclaimer"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/open_preference_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_button_solid"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/darkergrotesque_bold"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Open Preference Settings"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_more_recommendations_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_screen"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/ptsans_bold"
                android:text="Weekly Limit Reached!"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/ptsans_regular"
                android:justificationMode="inter_word"
                android:text="@string/no_more_recommendations_disclaimer"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>