<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".views.settings.AvailabilitySettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_rounded_medium"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_30sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="Availability"
        android:textColor="@color/black"
        android:textSize="@dimen/_40ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/sf_pro_rounded_medium"
        android:text="Please select your schedule for the weekend. You can select multiple days &amp; slots for greater number of matches."
        android:textColor="@color/black"
        android:justificationMode="inter_word"
        android:textSize="@dimen/_16ssp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="Friday"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/fri_slot_1"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="06:00 PM - 07:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/fri_slot_2"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="07:00 PM - 08:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/fri_slot_3"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="08:00 PM - 09:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="Saturday"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/sat_slot_1"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="06:00 PM - 07:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/sat_slot_2"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="07:00 PM - 08:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/sat_slot_3"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="08:00 PM - 09:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="Sunday"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/sun_slot_1"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="11:00 AM - 12:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/sun_slot_2"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:button="@drawable/circular_checkbox"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="12:00 PM - 01:00 PM"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_16ssp"
                                android:onClick="onCheckboxClicked"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_save_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/_50sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_gradient_dark"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_clear_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/_50sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="Clear All"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>