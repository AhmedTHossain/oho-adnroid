<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".views.registration.BudgetInputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's your \n Budget for the date?"
            android:textSize="@dimen/_35ssp"
            android:textColor="@color/textTitle"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/sf_pro_rounded_regular" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="can select multiple budget"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/textSubTitle"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_rounded_regular" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/button_one_dollar"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="1dp">
                <TextView
                    android:id="@+id/text_one_dollar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$"
                    android:background="@color/white"
                    android:textSize="@dimen/_30ssp"
                    android:textColor="@color/indicatioractive"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/button_two_dollar"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="1dp">
                <TextView
                    android:id="@+id/text_two_dollar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$$"
                    android:background="@color/white"
                    android:textSize="@dimen/_30ssp"
                    android:textColor="@color/indicatioractive"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/button_three_dollar"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="1dp">
                <TextView
                    android:id="@+id/text_three_dollar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$$$"
                    android:background="@color/white"
                    android:textSize="@dimen/_30ssp"
                    android:textColor="@color/indicatioractive"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>