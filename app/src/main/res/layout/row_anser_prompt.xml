<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_20sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsans_bold"
            android:text="One social cause that I really care about isâ€¦"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />

        <EditText
            android:id="@+id/text_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/border_drawable"
            android:fontFamily="@font/ptsans_regular"
            android:hint="your answer.."
            android:inputType="textMultiLine"
            android:gravity="start"
            android:maxLength="250"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:lines="4"/>

        <ImageView
            android:id="@+id/image_prompt"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_weight="1"
            android:src="@drawable/add_photo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/darkergrotesque_medium"
            android:text="Tap to select photo"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/text_caption_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="start"
            android:background="@drawable/border_drawable"
            android:fontFamily="@font/ptsans_regular"
            android:hint="enter a caption"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:lines="2"/>
    </LinearLayout>


</RelativeLayout>