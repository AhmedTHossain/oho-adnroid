<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.registration.ProfessionInputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iâ€™m a/an..."
            android:textSize="@dimen/_35ssp"
            android:textColor="@color/textTitle"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/_25sdp"
            android:fontFamily="@font/sf_pro_rounded_regular" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/textSubTitle"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/sf_pro_rounded_regular" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="@dimen/_10sdp">
            <EditText
                android:id="@+id/text_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Software Engineer"
                android:inputType="text"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:textColorHint="@color/textTertiary"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@null"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>